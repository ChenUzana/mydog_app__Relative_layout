<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".TripReport"
    tools:layout_editor_absoluteY="81dp">

    <RadioGroup
        android:id="@+id/ChoosetripGroup"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp">

        <RadioButton
            android:id="@+id/RBtrip1"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="trip1" />

        <RadioButton
            android:id="@+id/RBtrip2"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="trip2" />

        <RadioButton
            android:id="@+id/RBtrip3"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="trip3" />

    </RadioGroup>

    <EditText
        android:id="@+id/tripDate"
        android:layout_width="159dp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="70dp"
        android:layout_marginTop="210dp"

        android:ems="10"
        android:inputType="date"
        tools:text="trip date" />

    <Button
        android:id="@+id/todayB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="240dp"
        android:layout_marginTop="210dp"
        android:text="Today" />

    <EditText
        android:id="@+id/tripHour"
        android:layout_width="156dp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="70dp"
        android:layout_marginTop="270dp"
        android:ems="10"
        android:inputType="time"
        android:text="trip hour" />

    <Button
        android:id="@+id/nowB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="240dp"
        android:layout_marginTop="270dp"
        android:text="Now" />

    <ImageView
        android:id="@+id/kakiImage"
        android:layout_width="50dp"
        android:layout_height="wrap_content"


        android:layout_marginLeft="120dp"
        android:layout_marginTop="350dp"
        app:srcCompat="@drawable/poop" />

    <CheckBox
        android:id="@+id/kakiCB"
        android:layout_width="94dp"
        android:layout_height="46dp"

        android:layout_marginLeft="180dp"
        android:layout_marginTop="350dp"
        android:layout_weight="1"
        android:text="Kaki"
        android:textSize="24sp" />

    <Button
        android:id="@+id/addReport"

        android:layout_width="190dp"
        android:layout_height="40dp"

        android:layout_marginLeft="100dp"
        android:layout_marginTop="430dp"
        android:text="Add Report!" />

</RelativeLayout>